<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dpocheng.myappportfolio">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="dpocheng.myappportfolio.proj0.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="dpocheng.myappportfolio.proj1.MovieMainActivity"
            android:label="@string/movie_activity_title"
            android:theme="@style/ToolbarTheme">
        </activity>
        <activity
            android:name="dpocheng.myappportfolio.proj1.MovieDetailsActivity"
            android:label="@string/movie_details_activity_title"
            android:theme="@style/ToolbarTheme">
        </activity>
    </application>

</manifest>